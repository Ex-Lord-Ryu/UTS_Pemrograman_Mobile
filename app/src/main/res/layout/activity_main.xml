<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Student Form"
            android:textColor="@color/black"
            android:background="@color/hijau"
            android:fontFamily="sans-serif-black"
            android:textSize="30sp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:stretchColumns="3">

            <TableRow
                android:padding="5dp">
                <TextView

                    android:text="NIK"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <EditText
                    android:id="@+id/etNIK"
                    android:layout_width="292dp"
                    android:inputType="number"
                    android:maxLength="16"
                    android:hint="Masukan NIK" />
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:text="Nama Lengkap"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
                <EditText
                    android:id="@+id/etNamaLengkap"
                    android:layout_width="292dp"
                    android:hint="Masukan Nama Lengkap" />
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:text="Tanggal Lahir"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <EditText
                    android:id="@+id/etTanggalLahir"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_below="@id/etAlamat"
                    android:hint="Pilih Tanggal Lahir"
                    android:inputType="none" />

            </TableRow>


            <TableRow
                android:padding="5dp">
                <TextView
                    android:text="Tempat Lahir"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <EditText
                    android:id="@+id/etTempatLahir"
                    android:layout_width="292dp"
                    android:minHeight="48dp"
                    android:hint="Masukan Tempat Lahir" />
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:text="Alamat"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <EditText
                    android:id="@+id/etAlamat"
                    android:layout_width="292dp"
                    android:layout_weight="2"
                    android:minHeight="48dp"
                    android:hint="Masukan Alamat" />
            </TableRow>


            <TableRow
                android:padding="5dp">
                <TextView
                    android:text="Usia"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <EditText
                    android:id="@+id/etUsia"
                    android:layout_width="292dp"
                    android:minHeight="48dp"
                    android:hint="Auto Input Usia" />
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:text="Jenis Kelamin"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
                <Spinner
                    android:id="@+id/etJenisKelamin"
                    android:layout_width="292dp" />
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:text="Kewarganegaraan"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
                <RadioGroup
                    android:id="@+id/etKewarganegaraan"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/WNI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WNI"  />
                    <RadioButton
                        android:id="@+id/WNA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WNA"/>
                </RadioGroup>
            </TableRow>

            <TableRow
                android:padding="5dp"
                android:layout_weight="1">
                <TextView
                    android:text="Bidang Kompetensi"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Development_and_IT"
                        android:text="Development &amp; IT"/>
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/AI_Services"
                        android:text="AI Services"/>
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Design_Creative"
                        android:text="Design Creative"/>
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Writng"
                        android:text="Writng"/>
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Finance_and_Acounting"
                        android:text="Finance &amp; Acounting"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:text="Email"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_weight="1"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:hint="Masukan Email " />
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:layout_marginEnd="16dp" />
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </TableLayout>
    </LinearLayout>
</ScrollView>